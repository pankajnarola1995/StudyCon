<% include partials/TopHeader.ejs %>
<% include partials/header.ejs %>


<div class="span9">
    <div class="content">

        <div class="module">
            <div class="module-head">
                <h3>Country Detail Add</h3>
            </div>
            <div class="module-body">
                <div id="BannerDataTable">
                    <table cellpadding="0" cellspacing="0" border="0"
                           class="datatable-1 table table-bordered table-striped	 display" width="100%"
                           style="font-size:13px;">
                        <thead>
                        <tr>

                            <th>Delete</th>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Subject</th>
                            <th>Email</th>
                            <th>Message</th>


                        </tr>
                        </thead>
                        <tbody>

                        <% for(let i = 0; i < Contact.length; i++){ %>
                        <tr class="odd gradeX">
                            <td><a onclick="deleteContact('<%= Contact[i]._id %>')"><img src="/images/delete.png"
                                                                                         style="height: 25px;width: 25px"/></a>
                            </td>

                            <td><%= Contact[i].Date %></td>
                            <td><%= Contact[i].Name %></td>
                            <td><%= Contact[i].Subject %></td>
                            <td><%= Contact[i].Email %></td>
                            <td><%= Contact[i].Message %></td>

                        </tr>
                        <% } %>

                        </tbody>
                        <tfoot>
                        <tr>

                            <th>Delete</th>
                            <th>Date</th>
                            <th>Name</th>
                            <th>Subject</th>
                            <th>Email</th>
                            <th>Message</th>

                        </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div><!--/.content-->
</div><!--/.s-->


<script>
    function deleteContact(cid) {
        //console.log("de");
        if (confirm("Are you sure you want to delete customer ")) {
            $.ajax({
                type: 'POST',
                url: 'http://localhost:3000/Admin/AdminContactView/AdminContactDelete',
                data: {"cid": cid},
                dataType: 'json',
                success: function (result) {
                    if (result) {
                        $('#BannerDataTable').load("http://localhost:3000/Admin/AdminContactView #BannerDataTable");

                    }
                }
            });
        }
        else {
            return false;
        }
    }
</script>
