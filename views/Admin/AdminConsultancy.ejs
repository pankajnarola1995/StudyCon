                        <th>Country Name</th>
                        <th>Requirenment</th>
                        <th>Details</th>
                        <th>Important Links</th>



                    </tr>
                    </thead>
                    <tbody>


                        <% for(var i=0; i<Consultancy.length; i++){  %>
