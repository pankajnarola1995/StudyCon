<!doctype html>
<html>

<% include partials/header.ejs %>
<section class="container-fluid">
    <div class="container">
        <div id="registration-form">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="myform2">
                        <h3 class="text-center wine-color p-b-5">Fill in your details</h3>
                        <form method="post" action="/register/Add_User" >
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="Name">Name</label>
                                        <input type="text" class="form-control" id="Name" name="name" placeholder="Name"
                                               required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="Surname">Surname</label>
                                        <input type="text" class="form-control" id="surName" name="surname"
                                               placeholder="Surname">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="email">Email</label>
                                        <input type="email" class="form-control" id="email" name="email"
                                               placeholder="email" required  onchange="CheckUser()">
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="Date of Birth">Date of Birth</label>
                                        <input type="date" class="form-control" id="dob" name="date_of_birth"
                                               placeholder="Date of birth">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-9">
                                    <div class="form-group">
                                        <label for="Address">Address</label>
                                        <textarea type="text" class="form-control" id="Address" name="address"
                                                  placeholder="Address"></textarea>
                                    </div>
                                </div>
                                <div class="col-sm-3">
                                    <div class="form-group">
                                        <label for="select">Gender</label>
                                        <select name="gender">
                                            <option>Select</option>
                                            <option>Male</option>
                                            <option>Female</option>
                                            <option>Others</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6"></div>
                                <div class="col-sm-6"></div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6"></div>
                                <div class="col-sm-6"></div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="select">Nationality</label>
                                        <select name="nationality">
                                            <option>Select</option>
                                            <option>Nigeria</option>
                                            <option>Togo</option>
                                            <option>Ghana</option>
                                            <option>India</option>
                                            <option>Germany</option>
                                            <option>Australia</option>
                                            <option>USA</option>
                                            <option>New Zeland</option>
                                            <option>Canada</option>

                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="select">Highest Degree</label>
                                        <select name="highest_degree">
                                            <option>Select</option>
                                            <option>B.Sc</option>
                                            <option>M.Sc</option>
                                            <option>Phd</option>
                                            <option> Other <input type="text" class="form-control" id="highest_degree"
                                                                  name="highest_degree"
                                                                  placeholder="Type The Degree Name">
                                            </option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="select">Intended Study Field</label>
                                        <select name="intended_study_field">
                                            <option>Select</option>
                                            <option>Information Technology</option>
                                            <option>Informatics</option>
                                            <option>Physics</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="select">Degree Sought</label>
                                        <select name="degree_sought">
                                            <option>Select</option>
                                            <option>B.Sc</option>
                                            <option>M.Sc</option>
                                            <option>Phd</option>
                                            <option> Other <input type="text" class="form-control" id="degree_sought"
                                                                  name="degree_sought"
                                                                  placeholder="Type The Degree Name">

                                        </select>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="Address">Password</label>
                                        <input type="password" class="form-control" id="password" name="password"
                                               placeholder="password" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <label for="password2">Confirm Password</label>
                                        <input type="password" class="form-control" id="cpassword" name="cpassword"
                                               placeholder="confirm password" onchange="ConfirmPassword()"  required>
                                    </div>
                                </div>
                            </div>
                            <button type="submit" class="sub-btn2">Submit</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<% include partials/footer.ejs %>

<script src="js/jquery-1.11.2.min.js" type="text/javascript"></script>
<script src="js/jquery.mixitup.min.js" type="text/javascript"></script>
<script src="js/portfolio.js" type="text/javascript"></script>
<script src="js/bootstrap.js" type="text/javascript"></script>
<script type="text/javascript" src="js/jquery.waypoints.js"></script>
<script src="js/main.js" type="text/javascript"></script>
</body>
</html>